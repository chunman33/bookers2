<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
    <h2>User info</h2>
    <%= render 'users/info', user: @book.user %>


    <h2 class="mt-3">New book</h2>
    <%= render 'books/new', book: Book.new %>
  </div>

  <div class='col-md-8 offset-md-1'>
    <h2>Book detail</h2>
    <table class="table">
      <tr>
        <td>
          <%= link_to user_path(@user) do %>
            <%= attachment_image_tag @user, :profile_image_id, :fill, 50, 50, fallback:'no_image.jpg', size:'50x50' %>
            <br>
            <%= @book.user.name %>
          <% end %>
        </td>
        <td><%= link_to @book.title, book_path(@book) %></td>
        <td><%= @book.body %></td>


        <td>
          <% if @user.id == current_user.id %>
            <%= link_to 'Edit', edit_book_path(@book), class:'btn btn-success btn-xs' %>
          </td>
          <td>
            <%= link_to 'Destroy', book_path(@book), method: :delete, data: {confirm: '本当に消しますか?'}, class:'btn btn-danger btn-xs' %>
          </td>
          <% end %>
      </tr>
    </table>


  </div>
