<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
  		<%= render 'layouts/errors_messages', errors: @book %>

    <%= form_for(@book, html: { class:'col-md-6' }) do |f| %>
      <div class="form-group">
        <%= f.label :title, class:'control-label' %>
        <%= f.text_field :title, class:'form-control input-sm' %>
      </div>

      <div class="form-group">
        <%= f.label :body, 'Opinion',class:'control-label' %>
        <%= f.text_area :body, class:'form-control input-sm' %>
      </div>

      <div class="form-group">
        <%= f.submit class:'btn btn-success' %>
      </div>
    <% end %>
    <div class="col-md-12">
      <%= link_to 'Show', book_path(@book) %>
      <span>|</span>
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>
