<table class="table">
  <tr>
    <%= attachment_image_tag user, :profile_image_id, :fill, 100, 100, fallback: 'no_image.jpg', size:'100x100' %>
  </tr>
  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
  </tr>
</table>
<div class="row">
<%= link_to '', edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
</div>